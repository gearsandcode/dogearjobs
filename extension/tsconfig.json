{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "lib": ["DOM", "ES2020"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
